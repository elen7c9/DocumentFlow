@model DocumentFlow.Models.RegisterModel
@{
    Layout = null;
    IEnumerable<SelectListItem> positions = ViewBag.Positions;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link href="~/Content/styles.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=PT+Sans:400,700" rel="stylesheet" type="text/css">
    <script src="//code.jquery.com/jquery-1.9.1.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
    <script src="~/Scripts/validate.config.js"></script>
    <title>Регистрация</title>
</head>
<body class="reg-html">
<div class="reg-wrapper">
    <div class="reg-header">
        <h1>Регистрация</h1>
    </div>
    <div class="reg-form">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@id = "reg-form"}))
        {
            @Html.AntiForgeryToken()
            {
                @Html.ValidationSummary(false)
                {
                    <span>Имя:</span>
                    @Html.EditorFor(model => model.FirstName)
                    <br>

                    <span>Фамилия:</span>
                    @Html.EditorFor(model => model.LastName)
                    <br>

                    <span>Отчество:</span>
                    @Html.EditorFor(model => model.Patronymic)
                    <br>

                    <span>Почта:</span>
                    @Html.EditorFor(model => model.Email)
                    <br>

                    <span>Должность:</span>
                    @Html.DropDownListFor(model => model.PositionId, positions)
                    <br>

                    <span>Пароль:</span>
                    @Html.EditorFor(model => model.Password, new {@id = "password"})
                    <br>

                    <span>Подтвердить пароль:</span>
                    @Html.EditorFor(model => model.PasswordConfirm, new {@id = "confirm_password"})
                    <br>
                }
            }

            <input type="submit" class="button" value="Зарегистрироваться"/>
        }
    </div>
</div>
</body>